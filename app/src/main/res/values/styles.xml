<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="RoundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item> <!-- 50% делает круг -->
    </style>
    <style name="PopupMenuStyle" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@drawable/popup_menu_background</item>
    </style>
    <style name="UserInfoDialog" parent="ThemeOverlay.Material3.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:windowElevation">0dp</item>
    </style>
    <!-- Dialog Theme -->
    <style name="DeleteCardDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="android:background">@drawable/rounded_dialog_background</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Cardify.MediumComponent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    <style name="PositiveButtonStyle" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/design_default_color_error</item>
    </style>
    <style name="NegativeButtonStyle" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/button_text</item>
    </style>
    <style name="ShapeAppearance.Cardify.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
    <!-- Filter Dialog Theme -->
    <style name="FilterDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="android:background">@drawable/rounded_dialog_background</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Cardify.MediumComponent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <style name="QrCodeDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="SettingsTitleStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/button_text</item>
    </style>

    <style name="SettingsItemStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/button_text</item>
    </style>

    <style name="PrivacyDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
</resources>